<div class="col-md-11 mx-auto">
  <h2 class="pt-3 ml-5"><span style="background-color:#EEEEEE"><%= @shop.name %></span></h3>
  <%= attachment_image_tag @shop, :image, width: '70%', height: 'auto', class: "rounded" %>
        </div>
        <h4>店舗説明</h4>
          <p><%= @shop.introduction %></p>
        <h4>サウナ情報</h4>
          <p><%= @shop.sauna%></p>


        </div>
      </div>
  </div>
  <table class="table table-bordered">
       <tr>
        <th>アクセス</th>
        <th>
         <p>〒<%= @shop.postal_code %></p>
         <%= @shop.address %>
        </th>
       </tr>
       <tr>
        <th>電話番号</th>
        <th>
         <p><%= @shop.phone_number %></p>
        </th>
       </tr>
       <tr>
        <th>利用金額</th>
        <th>
         <p>￥<%= @shop.price %></p>
        </th>
       </tr>
       <tr>
        <th>HP</th>
        <th>
         <p><%= @shop.homepage %></p>
        </th>
       </tr>
      </table>
</div>

<div class="comments">
<p>コメント件数：<%= @shop.comments.count %></p>
<% @shop.comments.each do |comment| %>
  <%= comment.created_at.strftime('%Y/%m/%d') %><br><p>タイトル： <%= comment.title %></p><br><%= comment.text %>
  <% if comment.customer == current_customer %>
  <div class="comment-delete">
    <%= link_to "削除", shop_comment_path(comment.shop, comment), method: :delete %>
  </div>
  <%end %>
<% end %>
</div>
<div class="new-comment">
<%= form_with(model:[@shop, @comment], local: true) do |f| %>
  <%= f.text_field :title,placeholder: "タイトル" %>
  <%= f.text_area :text, rows:'10',placeholder: "ユーザーの皆さんのリアルな声をここに！！" %>
  <%= f.submit "送信する" %>
<% end %>
</div>