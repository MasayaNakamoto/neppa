<div class="container mt-3">
  <h3>neppa会員に新規登録</h3>

<%= form_with(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

    <div class="row">
      <div class="col-3">名前</div>
      <div class="form-group col-4">
        <%= f.label "(姓)" %><br />
        <%= f.text_field :last_name, autofocus: true, placeholder: "サウナ",class: "form-control" %>
      </div>

      <div class="form-group col-4">
        <%= f.label "(名)" %><br />
        <%= f.text_field :first_name, autofocus: true, placeholder: "大好き",class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-3">フリガナ</div>
      <div class="form-group col-4">
        <%= f.label "(セイ)" %><br />
        <%= f.text_field :last_name_kana, autofocus: true, placeholder: "サウナ",class: "form-control" %>
      </div>

      <div class="form-group col-4">
        <%= f.label "(メイ)" %><br />
        <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ダイスキ",class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-3">メール</div>
      <div class="form-group col-4"><%= f.email_field :email, autofocus: true, placeholder: "sample@example.com",class: "form-control" %></div>
    </div>

    <div class="row">
      <div class="col-3">電話番号(ハイフンなし)</div>
      <div class="form-group col-4"><%= f.text_field :phone_number, autofocus: true, placeholder: "00000000000",class: "form-control" %></div>
    </div>

    <div class="row">
      <div class="col-3">
        パスワード
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </div>
      <div class="form-group col-4"><%= f.password_field :password, autocomplete: "new-password",class: "form-control" %></div>
    </div>

    <div class="row">
      <div class="col-3">パスワード(確認用)</div>
      <div class="form-group col-4"><%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %></div>
    </div>

      <div class="actions offset-md-10">
       <%= f.submit "新規登録",class: "btn btn-success" %>
      </div>

<% end %>