<h3><span style="background-color:#EEEEEE">商品編集</span></h3>
<table class="table table-borderless">
  <%= form_with model:@shop, :url => {:action => :update} do |f| %>
  <tr>
    <th><%= f.label :店舗画像 %></th>
    <th><%= f.attachment_field :image, class: "form-control-file" %></th>
  </tr>
  <tr>
    <th><%= f.label :店舗名 %></th>
    <th><%= f.text_field :name, placeholder: "店舗名", class: "form-control" %></th>
  </tr>
  <tr>
    <th><%= f.label :店舗説明 %></th>
    <th><%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: "form-control" %></th>
  </tr>
  <tr>
    <th><%= f.label :エリア %></th>
    <th><%= f.collection_select :genre_id, Genre.all, :id, :name, :include_blank => "--選択してください--", class: "form-control" %></th>
  </tr>
  <tr>
    <th><%= f.label :税抜価格 %></th>
    <th><%= f.text_field :price, placeholder: "1000", class: "form-control" %>円</th>
  </tr>
  <tr>
    <th><%= f.label :郵便番号 %></th>
    <th><%= f.text_field :postal_code, placeholder: "1234567", class: "form-control"  %></th>
  </tr>
  <tr>
    <th><%= f.label :住所 %></th>
    <th><%= f.text_field :address, placeholder: "住所", class: "form-control" %></th>
  </tr>
  <tr>
    <th><%= f.label :ホームページ %></th>
    <th><%= f.text_field :homepage, placeholder: "https-", class: "form-control"  %></th>
  </tr>
  <tr>
    <th><%= f.label :サウナ情報 %></th>
    <th><%= f.text_area :sauna, placeholder: "サウナ、水風呂の位置や外気浴ができるか否かなど", class: "form-control"  %></th>
  </tr>
</table>
     <%= f.submit '変更を保存', class: "btn btn-success" %>
      <% end %>