  <h3 class="pt-3 ml-5"><span style="background-color:#EEEEEE">商品一覧</span></h3>
   <div class="row">
     <% @items.each do |item| %>
     <div class="card col-md-3 m-5" style="width: 18rem;">
       <%= link_to item_path(item.id) do %>
       <div>
        <%= attachment_image_tag item, :image, class: "card-img-top rounded" %>
       </div>
        <div class="card-body">
         <p class="card-title"><%= item.name %></p>
         <p class="card-text">¥<%= converting_to_jpy(item.add_tax_price) %>(税込)</p>
        </div>
        <% end %>
     </div>
     <% end %>
  </div>