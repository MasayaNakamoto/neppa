<div class="container">
  <h1>商品一覧</h1>
   <div class="row pt-4 mb-5">
     <% @items.each do |item| %>
     <div class="card col-md-3 p-1 m-1" style="width: 18rem;">
       <%= link_to item_path(item.id) do %>
       <div>
        <%= attachment_image_tag item, :image, class: "card-img-top rounded" %>
       </div>
        <div class="card-body">
         <p class="card-title"><%= item.name %></p>
         <p class="card-text">¥<%= converting_to_jpy(item.add_tax_price) %>(税込)</p>
        </div>
        <% end %>
      </div>
</div>
  <% end %>